<!DOCTYPE html>
<html lang="en">
<head>
    

  <meta charset="UTF-8">
  <title>Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container">
    <h2 class="text-info mb-4">Your Short URLs</h2>

    <form action="/shortUrls" method="POST" class="row g-3 mb-4">
      <div class="col-md-9">
        <input required type="url" name="fullUrl" class="form-control form-control-lg" placeholder="Enter full URL">
      </div>
      <div class="col-md-3">
        <button class="btn btn-success btn-lg w-100">Shorten it!</button>
      </div>
    </form>

    <table class="table table-striped table-hover">
      <thead class="table-primary">
        <tr>
          <th>Full URL</th>
          <th>Short URL</th>
          <th>Clicks</th>
        </tr>
      </thead>
      <tbody>
        <% shortUrls.forEach(shortUrl => { %>
          <tr>
            <td><a href="<%= shortUrl.full %>" target="_blank"><%= shortUrl.full %></a></td>
            <td><a href="/<%= shortUrl.short %>" target="_blank"><%= shortUrl.short %></a></td>
            <td><%= shortUrl.clicks %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <footer class="text-center mt-5 mb-3">
    <small class="text-muted">Created by Sitangshu ðŸ’™</small>
  </footer>
</body>
</html>
